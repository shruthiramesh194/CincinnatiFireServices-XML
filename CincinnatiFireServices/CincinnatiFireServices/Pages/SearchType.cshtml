@page
@model CincinnatiFireServices.Pages.SearchTypeModel
@{

    List<QuickType.Incident> serviceIncidentList = (List<QuickType.Incident>)ViewData["serviceIncidentList"];
}
<link rel="stylesheet" href="~/css/search.css" />
<div class="row no-gutters">
    <div class="col-sm-5">
        <h1 class="display-4 font-weight-bold jumbotron">Medical Incidents that occur due to fire incidents</h1>
    </div>
    <div class="col-sm-7">
        <div class="card-body">
            <h2>Search by Medical Service</h2>
            <form method="post">
                <select name="medicservice" required>
                    <option value="0">Select a Medical Service</option>

                    <option value="ALS">Advanced Life Support</option>
                    <option value="BLS">Basic Life Support</option>

                </select>

                <input type="submit" value="Incidents by Services" name="Get Services">
            </form>


        </div>
    </div>

    <hr />


    @if (serviceIncidentList != null)
    {


        <table id="Fire">
            <tr>
                <th>Address</th>
                <th>Incident Type Group</th>

            </tr>

            @foreach (QuickType.Incident incident in serviceIncidentList)
            {

                <tr>
                    <td>@incident.AddressX</td>
                    <td>@incident.CfdIncidentTypeGroup</td>


                </tr>

            }
        </table>

    }
</div>